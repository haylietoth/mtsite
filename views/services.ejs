        <div id="badge">
          <img 
            class="badge"
            src="<%- pageContent.data.badge.url %>" 
            alt="<%- pageContent.data.badge.alt %>" 
          />
          <div class="box">
            <a class="underline" style="line-height: 2;margin-top: 0;margin-left: 12px" href="mailto:hello@madeleine.work" target="_blank">HELLO@MADELEINE.WORK</a>
          </div>
        </div>
      </div>
      <div class="services">
        <img 
          src="<%- pageContent.data.image.url %>" 
          alt="<%- pageContent.data.image.alt %>"
        />
        <div id="process">
          <h2 style="font-size: 40px !important;">PROCESS</h2>
          <%- ctx.prismicH.asHTML(pageContent.data.process) %>
        </div>
      </div>
    </div>
  </body>
</html>
