<!DOCTYPE html(lang='en')>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body id="services">
    <div class="loading"></div>
    <div class="whitebar" style="background-color: #F6F9DD;">
    <%- include('./partials/nav', { id: 'services' }); %>
    <%- include('./partials/scroll-btn'); %>
    <div class="service-content">
      <div class="services">
        <div id="list">
          <h2 style="font-size: 16px;">CREATIVE SERVICES</h2>
          <%- ctx.prismicH.asHTML(pageContent.data.creative_services) %>
