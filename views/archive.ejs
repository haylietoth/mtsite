<!DOCTYPE html(lang='en')>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body id="archive">
    <div class="loading" style="background-color: <%-menuContent.data.homepage_color %>"></div>
    <div class="overlay">
      <div class="img-menu">
        <i id="exit" class="menu-icon material-icons">&#xE5CD;</i>
        <i id="zoom" class="menu-icon material-icons">&#xE8FF;</i>
        <i id="fullscreen" class="menu-icon material-icons">&#xE5D0;</i>
      </div>
    </div>
    <div class="whitebar" style="background-color: #f8f8f4;">
    <%- include('./partials/nav', { id: 'archive', font_color: '', bg_color: '' }); %>
    <div class="archive" style="display:block;">
      <h1 class="archive-title body-font"><%- ctx.prismicH.asText(pageContent.data.page_title) %></h1>
      <div class="archive-container">
        <div class="grid">
          <% for (let i = 0; i < pageContent.data.tag_order.length; i++) {
            var currentTag = pageContent.data.tag_order[i].tag;
            for (let j = 0; j < pageContent.data.archive.length; j++) {
              if (currentTag == pageContent.data.archive[j].tag ) { %>
                <div class="grid-item fadeIn archive-below-viewport">
                  <img
                    class="archive-thumbnail"
                    id="<%= pageContent.data.archive[j].image.id %>" 
                    src="<%= pageContent.data.archive[j].image.url %>" 
                    alt="<%- pageContent.data.archive[j].image.alt %>" />
                </div>
            <% }
            }
          }
          for (let j = 0; j < pageContent.data.archive.length; j++) {
            if (pageContent.data.archive[j].tag == null ) { %>
              <div class="grid-item fadeIn archive-below-viewport">
                <img
                    class="archive-thumbnail"
                    id="<%= pageContent.data.archive[j].image.id %>" 
                    src="<%= pageContent.data.archive[j].image.url %>" 
                    alt="<%- pageContent.data.archive[j].image.alt %>" />
              </div>
            <% }
          } %>
        </div>
      </div>
    </div>
    <%- include('./partials/footer'); %>
  </body>
</html>
