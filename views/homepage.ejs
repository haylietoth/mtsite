<!DOCTYPE html(lang='en')>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="homepage" id="homepage">
    <div class="loading" style="background-color: <%-pageContent.data.background_color %>"></div>
    <div class="whitebar" style="background-color: <%-pageContent.data.background_color %>">
      <%- include('./partials/nav', { id: 'home' }); %>
      <%- include('./partials/scroll-btn'); %>
    </div>
    <div class="container" id="container" style="background-color: <%-pageContent.data.background_color %>">
      <div class="home-content">
        <div class="details">
          <h1 class="to-letter">
            <%- ctx.prismicH.asText(pageContent.data.title) %>
          </h1>
          <div class="links">
            <span class="box">
              <a href="mailto:hellow@madeleine.work" target="_blank" class="underline">
                EMAIL
              </a>       
            </span>
            <% pageContent.data.links.map(item => { %>
              <span class="box">
                <a href="<%- ctx.prismicH.asLink(item.link) %>" class="underline" target="_blank">
                  <%- ctx.prismicH.asText(item.text) %> 
                </a>       
              </span>
            <% }) %>
          </div>
        </div>
        <div class="details">
          <%- ctx.prismicH.asText(pageContent.data.details) %>
        </div>
      </div>
      <canvas id="canvas" style="position: absolute;"></canvas>
    </div>
    <div class="thumbnails" id="work">
      <%- include("SliceZone", {SliceZone: pageContent.data.page_content}); %>
    </div>
    <footer class="home-footer" id="info">
      <a href="<%- ctx.prismicH.asLink(pageContent.data.archive_link) %>">ARCHIVE</a>
    </footer>
  </body>
  <script src="/scripts/joyful.js"></script>
</html>


