extends ./layout.pug

block prepend body
  body.homepage(data-wio-id=pageContent.id)
    
    include ./partials/header-home.pug
    button(class="scrollToTopBtn")
      img(src="/images/Scroll-2-Top.png")
    
    // Content Section
    div
     for slice in pageContent.data.page_content
        case slice.slice_type
          when 'main_text'
            div.container
              div.home-content-section(class=sectionClass)
                h2.to-letter
                  != PrismicDOM.RichText.asHtml(slice.primary.text, ctx.linkResolver)
     div.thumbnails(id="work")
      //- Display the slices
      for slice in pageContent.data.page_content
        case slice.slice_type
          when 'thumbnail'
            include ./partials/thumbnail.pug 
    footer.home-footer(id="info")
      .info-container
        .info-main
         for slice, index in pageContent.data.page_content
          case slice.slice_type
            when 'footer_text'
              if index == 9
                p.to-letter.scroll-transition-fade(id=index)
                  != PrismicDOM.RichText.asText(slice.primary.text, ctx.linkResolver)
        div.home-row
          div.home-column
           for slice, index in pageContent.data.page_content
              case slice.slice_type
                when 'footer_text'
                  if index == 10
                    p.to-letter.scroll-transition-fade(id=index)
                      != PrismicDOM.RichText.asText(slice.primary.text, ctx.linkResolver)
          div.home-column
            div.site-footer.home-row
              #info
